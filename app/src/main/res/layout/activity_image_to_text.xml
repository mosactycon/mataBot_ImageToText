<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opencv.android.JavaCameraView
        android:layout_marginTop="77dp"
        android:layout_width="fill_parent"
        android:layout_height="630dp"
        android:id="@+id/frame_Surface"/>

    <LinearLayout
        android:id="@+id/read_text_bar"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/black">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/read_text_button"
            android:text="Baca"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/pink_1"
            android:background="@drawable/square2_button"

            />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/current_image"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:padding="50dp"
        android:id="@+id/textView"
        android:textSize="16dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/translate_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/documen_scanner_image" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/take_picture_button"
            android:src="@drawable/take_picture_icon"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/storage_image_button"
            android:src="@drawable/gallery_image"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>

</FrameLayout>